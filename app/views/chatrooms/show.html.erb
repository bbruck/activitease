<div class="container">

  <h2 class="h1-chat" style="text-align:center">Start chatting!</h2>

  <div class id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <% @chatroom.messages.each do |message| %>
      <div class="message-container" id="message-<%= message.id %>">
        <div class="author">
          <span class= "name"><%= message.user.nickname %></span>
          <small class= "time" ><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
        </div>
        <p class="content"><%= message.content %></p>
      </div>
    <% end %>
  </div>
      <div id= "chat-input">
        <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
          <%= f.input :content, label: false, placeholder: "type here#{@chatroom.name}" %>
          <%= f.submit "Send", class: "btn-chat btn-warning btn-md" %>
      </div>
  <% end %>

</div>
