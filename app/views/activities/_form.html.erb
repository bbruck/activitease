<%= simple_form_for(@activity) do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :category, collection: ["Adventure", "Animal", "Architecture", "Arts", "Collectibles", "Culture", "Education", "Food", "Games", "Green", "Handicrafts", "Music", "Observation", "Social", "Spiritual", "Travel", "Sports", "Well-being"]%>
  <%= f.input :date_from, as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :date_to, as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :address, id:'activity_address' %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "List now!" %>
<% end %>
