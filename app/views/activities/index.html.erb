<div class="container">

  <div class="search d-flex align-items-center">
    <div class="search-bar d-flex">
      <p>I'm looking for </p>
      <%= simple_form_for :activity, url: activities_path, method: :get do |f| %>
        <% if params[:activity].present?%>
          <%= f.input :category, collection: Activity::CATEGORIES, prompt: 'select category', label: false, selected: params[:activity][:category] %>
        <%else %>
          <%= f.input :category, collection: Activity::CATEGORIES, prompt: 'select category', label: false %>
        <%end%>
        <p>in: </p>
        <% if params[:cateogory].present?%>
          <%= f.input :address, input_html: { value: params[:category][:address] } %>
        <%else %>
          <%= f.input :address, label: false %>
        <%end%>
    </div>
        <div class="form-group btn-go">
          <%= f.button :submit, 'Go!', class: 'btn-font' %>
        </div>
      <% end %>
  </div>

  <h1>This is our activities index page</h1>
  <div class="activity-flex">
    <div class="activity_cards">
      <% @activities.each do |activity| %>
        <div class="card-activity">
          <% if activity.photo.attached? %>
            <%= cl_image_tag activity.photo.key, height: 300, width: 400, crop: :fill, class: "activity-img" %>
          <% else %>
            <%= image_tag "https://images.unsplash.com/photo-1506869640319-fe1a24fd76dc?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80", class: "activity-img" %>
          <% end %>
          <div class="card-activity-infos">
            <p><strong><%= activity.category %></strong></p>
            <h3><%= link_to activity.title, activity_path(activity) %></h3>
          </div>
        </div>
      <% end %>
    </div>

    <div id="map"
      style= "width: 100%; height: 600px;"
      data-markers= "<%= @markers.to_json %>"
      data-mapbox-api-key= "<%= ENV['MAPBOX_API_KEY']%>">
    </div>
  </div>

  <%= link_to "Get your activity listed!", new_activity_path, class: "btn btn-outline-warning" %>
</div>
